# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_size = 4
indent_style = tab
end_of_line = lf
insert_final_newline = true
ij_any_keep_indents_on_empty_lines = false

# Matches multiple programming languages. See scope definitions:
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Options
# [*.{js,py}]
# indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.vue]
ij_html_align_attributes = true
ij_html_attribute_wrap = split_into_lines
ij_html_inline_tags = 1