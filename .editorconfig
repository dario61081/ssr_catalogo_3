# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_size = 4
indent_style = tab
end_of_line = lf
insert_final_newline = true
ij_any_keep_indents_on_empty_lines = false
ij_typescript_enum_constants_wrap = split_into_lines
ij_javascript_align_multiline_parameters = true
ij_any_ternary_operation_wrap = split_into_lines
ij_javascript_method_call_chain_wrap = split_into_lines
ij_any_method_parameters_wrap = split_into_lines
ij_javascript_method_parameters_wrap = split_into_lines
ij_any_method_call_chain_wrap = split_into_lines
ij_any_wrap_long_lines = true
ij_any_array_initializer_wrap = split_into_lines
ij_any_extends_list_wrap = split_into_lines
ij_any_wrap_comments = true
ij_any_prefer_parameters_wrap = true
ij_html_attribute_wrap = split_into_lines
# ij_javascript_method_chain_wrap = split_into_lines
# ij_javascript_method_call_chain_wrap = split_into_lines
# Matches multiple programming languages. See scope definitions:
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Options
# [*.{js,py}]
# indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.vue]

ij_xml_attribute_wrap = split_into_lines
ij_html_align_attributes = false
ij_html_attribute_wrap = split_into_lines
ij_html_inline_tags = 1
ij_html_space_around_equality_in_attribute = false
ij_html_add_new_line_before_tags = 2